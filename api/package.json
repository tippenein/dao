{
  "name": "dao-chainhook",
  "version": "1.0.0",
  "main": "index.js",
  "author": "/-/",
  "license": "MIT",
  "scripts": {
    "setup": "chmod +x ./scripts/* && bun install",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "expose": "npx localtunnel --port 3000",
    "chainhook": "chainhook service start --predicate-path=./predicates/proposals.json --predicate-path=./predicates/hello.json --config-path=./settings/Chainhook.toml",
    "build": "tsc",
    "serve": "node ./dist/server.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-type": "^18.5.0",
    "pg-promise": "^11.5.4"
  },
  "devDependencies": {
    "localtunnel": "^2.0.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.7",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
